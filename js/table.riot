        </button>
      </th>
      <th class="vf-table__heading" scope="col"><button class="vf-button vf-button--sm vf-button--icon">
          Data location
          <svg width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" version="1.1" preserveAspectRatio="xMinYMin">
            <use xlink:href="#vf-table-sortable"></use>
          </svg>
        </button>
      </th>
    </tr>
  </thead>

  <tbody class="vf-table__body">
    <tr class="vf-table__row" each={ item in props.data }>
      <td class="vf-table__cell">{item.added_to_index_formatted}</td>
      <td class="vf-table__cell">{item.project_core.project_title}</td>
      <td class="vf-table__cell">
        <author-names author-names={item.author_names}/>
      </td>
      <td class="vf-table__cell">
        <p each={ publication in item.publications}>
          <a href={publication.url} target="_blank">{publication.publisher}</a>
        </p>
      </td>
      <td class="vf-table__cell">
        <ul style="list-style: none; margin: 0; padding: 0;">
          <li each={ena_accession in item.insdc_project_accessions}>
            <a href={`https://identifiers.org/ena.embl:${ena_accession}`}>{ena_accession}</a>
          </li>
          <li each={ae_accession in item.array_express_accessions}>
            <a href={`https://identifiers.org/arrayexpress:${ae_accession}`}>{ae_accession}</a>
          </li>
          <li>
            <a href={item.dcp_url}>{item.uuid}</a>
          </li>
        </ul>
      
      </td>
    </tr>
  </tbody>
